<p id="notice">
</p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
  <tr><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:"63x63"%></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book_new, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label><br />
    <%= f.text_area :body %>
  </div>
  <%= f.submit "Create Book", class:"btn btn-success" %>
<% end %>
</div>

    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "40x40"%><br>
            <% end %>
            <%= link_to user_path(@user.id) do %><%= @user.name %><% end %></td>
          <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
          <td><%= @book.body %></td>
           <% if @user.id == current_user.id %>
            <td><%= link_to edit_book_path(@book.id), class:"btn btn-sm btn-success" do %>Edit<% end %></td>
            <td><%= link_to book_path(@book.id), class:"btn btn-sm btn-danger", method: :delete, 'data-confirm'=> '本当に消しますか？' do %>
            Destroy
            <% end %>
            <% end %>
            </td>
        </tr>
      </table>
    </div>
  </div>
</div>